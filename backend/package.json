{
  "name": "lingo-challenge-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "ElysiaJS backend for Lingo Challenge vocabulary app",
  "main": "src/index.js",
  "scripts": {
    "dev": "bun run src/index.js",
    "start": "node --loader=esbuild-register/loader src/index-node.js",
    "dev:elysia": "node --loader=esbuild-register/loader src/index.js",
    "dev:bun": "bun run src/index.js",
    "start:bun": "bun run src/index.js",
    "db:generate": "npx drizzle-kit generate:sqlite",
    "db:migrate": "node --loader=esbuild-register/loader src/scripts/migrate.js",
    "db:seed": "node --loader=esbuild-register/loader src/scripts/seed.js",
    "db:studio": "npx drizzle-kit studio",
    "test": "echo \"No tests defined\""
  },
  "dependencies": {
    "@elysiajs/cors": "^1.0.0",
    "@elysiajs/static": "^1.0.0",
    "@elysiajs/swagger": "^1.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.29.0",
    "elysia": "^1.0.0",
    "esbuild-register": "^3.6.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "bun-types": "latest",
    "drizzle-kit": "^0.20.0"
  }
}
